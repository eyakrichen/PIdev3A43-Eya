{% extends 'base.html.twig' %}
{% block body %}
    <a class="btn btn-secondary" href="{{ path('app_post_index') }}">Back</a>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="img_container">
                    <div class="img-box b1">
                        <img src="{{ asset('Assets/images/a-1.jpg') }}" alt="" />
                    </div>

                </div>
            </div>
            <div class="col-md-6">
                <div class="detail-box">
                    <div class="heading_container">
                        <h3>
                            {{ post.title }}
                        </h3>
                        <p>
                            {{ post.details }}
                        </p>

                    </div>
                </div>
                <div style="width:100%;display:flex;justify-content: flex-end;align-items: flex-end;flex-direction: row;gap:10px;" >
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary">
                        Edit
                    </a>
                    {{ include('post/_delete_form.html.twig') }}

                </div>
            </div>
        </div>
    </div>

{#    {{ include('comment/_form.html.twig') }}#}
    <div style="width:100%;display:flex;justify-content: center;align-items: center;flex-direction: row;gap:10px;" >
        <a href="{{ path('app_comment_new', {'id': post.id}) }}" class="btn btn-primary" style="width: 35%;height: 80%;">
            Comment
        </a>

    </div>
    {% for comment in post.comments %}
    <div style="width:100%;background-color: transparent;border: 1px solid lightgrey;height:auto;display:flex;border-radius: 8px;justify-content: center;padding:2vh;align-items:center;flex-direction: column;gap:20px;">
        <div style="padding-top:10px;padding-bottom:10px;min-height:50px;width: 100%;background-color: whitesmoke;display: flex;justify-content: flex-start;align-items: center;flex-direction: column;border-radius: 10px;">
            <div style="padding-left:2rem;width:100%;display: flex;justify-content: flex-start;align-items: flex-start;gap:1rem;">
            <div style="width: 50px;height: 50px;">
                    <img style="height: 50px;width: 50px" src="{{ asset('Assets/images/a-1.jpg') }}" alt="" />
            </div>

            <div>
                <b style="font-size: 16px" >Foulen Ben Foulen</b>
            </div>
            </div>
            <div style="width: 100%;text-align: left;padding-left: 10%;">
            <em style="font-size: 10px">16-02-2023</em>

            </div>
        </div>
        <div style="height:auto;width: 100%;background-color: whitesmoke;border-radius: 10px;text-align: center;padding-left:10px;padding-top:10px;">
            <p>{{ comment.description }}</p>
        </div>
        <div style="width:100%;display:flex;justify-content: flex-end;align-items: flex-end;flex-direction: row;gap:10px;" >
            <a href="{{ path('app_comment_edit', {'id': comment.id}) }}" class="btn btn-primary">
                Edit
            </a>
            {{ include('comment/_delete_form.html.twig') }}

        </div>
    </div>
    {% endfor %}

{% endblock %}